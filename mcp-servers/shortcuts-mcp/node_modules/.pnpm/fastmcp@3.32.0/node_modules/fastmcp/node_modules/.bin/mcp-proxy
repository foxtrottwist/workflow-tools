#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/mcp-proxy@6.4.0/node_modules/mcp-proxy/dist/bin/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/mcp-proxy@6.4.0/node_modules/mcp-proxy/dist/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/mcp-proxy@6.4.0/node_modules/mcp-proxy/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/mcp-proxy@6.4.0/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/mcp-proxy@6.4.0/node_modules/mcp-proxy/dist/bin/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/mcp-proxy@6.4.0/node_modules/mcp-proxy/dist/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/mcp-proxy@6.4.0/node_modules/mcp-proxy/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/mcp-proxy@6.4.0/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../mcp-proxy@6.4.0/node_modules/mcp-proxy/dist/bin/mcp-proxy.mjs" "$@"
else
  exec node  "$basedir/../../../../../mcp-proxy@6.4.0/node_modules/mcp-proxy/dist/bin/mcp-proxy.mjs" "$@"
fi
