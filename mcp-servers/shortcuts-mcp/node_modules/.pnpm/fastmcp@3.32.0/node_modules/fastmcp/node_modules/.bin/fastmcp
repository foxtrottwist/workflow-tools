#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/fastmcp@3.32.0/node_modules/fastmcp/dist/bin/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/fastmcp@3.32.0/node_modules/fastmcp/dist/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/fastmcp@3.32.0/node_modules/fastmcp/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/fastmcp@3.32.0/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/fastmcp@3.32.0/node_modules/fastmcp/dist/bin/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/fastmcp@3.32.0/node_modules/fastmcp/dist/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/fastmcp@3.32.0/node_modules/fastmcp/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/fastmcp@3.32.0/node_modules:/Users/lawhorne/workflow-systems/plugins/workflow-tools/mcp-servers/shortcuts-mcp/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../dist/bin/fastmcp.js" "$@"
else
  exec node  "$basedir/../../dist/bin/fastmcp.js" "$@"
fi
