{
  "name": "shortcuts-mcp",
  "version": "3.1.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:mcpb": "pnpm build && pnpm pack:mcpb",
    "pack:mcpb": "mkdir temp-mcpb-build && cd temp-mcpb-build && cp ../package.json ../pnpm-lock.yaml ../manifest.json . && cp -r ../dist . && NODE_ENV=production pnpm install --frozen-lockfile --prod && mcpb pack . ../shortcuts-mcp-${npm_package_version}.mcpb && cd .. && rm -rf temp-mcpb-build",
    "start": "tsx src/server.ts",
    "dev": "fastmcp dev src/server.ts",
    "inspect": "fastmcp inspect src/server.ts",
    "lint": "prettier --check . && eslint . && tsc --noEmit",
    "test": "vitest run",
    "format": "prettier --write . && eslint --fix ."
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "shortcuts",
    "macos",
    "automation",
    "typescript",
    "fastmcp",
    "applescript"
  ],
  "repository": {
    "url": "https://github.com/foxtrottwist/shortcuts-mcp"
  },
  "author": "Law Horne <hello@foxtrottwist.com>",
  "homepage": "https://lawrencehon.com/mcp",
  "type": "module",
  "license": "MIT",
  "packageManager": "pnpm@10.28.2",
  "description": "TypeScript MCP server for macOS Shortcuts automation.",
  "dependencies": {
    "@fastify/deepmerge": "^3.1.0",
    "fastmcp": "^3.13.0",
    "pino": "^9.7.0",
    "zod": "^3.24.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "node -e \"const fs=require('fs'); const pkg=require('./package.json'); const manifest=require('./manifest.json'); manifest.version=pkg.version; fs.writeFileSync('manifest.json', JSON.stringify(manifest, null, 2));\" && pnpm build:mcpb && pnpm exec prettier --write CHANGELOG.md manifest.json"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "manifest.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "shortcuts-mcp-*.mcpb",
              "label": "MCP Bundle (.mcpb)"
            }
          ]
        }
      ]
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "lefthook"
    ]
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "^1.1.0",
    "@eslint/js": "^9.26.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^24.1.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-perfectionist": "^4.12.3",
    "jiti": "^2.4.2",
    "lefthook": "^2.1.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.3"
  }
}
